import React, { useState } from 'react';
import { View, StyleSheet, ScrollView } from 'react-native';
import { Text, TextInput, Button, Chip, useTheme, Divider } from 'react-native-paper';
import Icon from 'react-native-vector-icons/MaterialCommunityIcons';
import dayjs from 'dayjs';
import DateRangePicker from './DateRangePicker';
import type { UserPreferences, TripBudget } from '../../types';
import { useAuthStore } from '../../stores';

const FOOD_TYPES = ['川菜', '粤菜', '湘菜', '东北菜', '西餐', '日料', '韩料', '泰国菜', '素食', '小吃'];
const ATTRACTION_TYPES = ['自然风光', '历史古迹', '主题公园', '博物馆', '海滩', '山区', '城市观光', '民俗风情'];

export default function PlanningForm({ onSubmit, onAIContinue }: any) {
  const theme = useTheme();
  const { user } = useAuthStore();

  const [destinations, setDestinations] = useState('');
  const [startDate, setStartDate] = useState('');
  const [endDate, setEndDate] = useState('');
  const [travelers, setTravelers] = useState('2');
  const [budgetTotal, setBudgetTotal] = useState('5000');
  const [selectedFoodTypes, setSelectedFoodTypes] = useState<string[]>([]);
  const [selectedAttractionTypes, setSelectedAttractionTypes] = useState<string[]>([]);
  const [dateError, setDateError] = useState<string | undefined>();

  const handleFoodTypeToggle = (type: string) => {
    setSelectedFoodTypes(prev =>
      prev.includes(type)
        ? prev.filter(t => t !== type)
        : [...prev, type]
    );
  };

  const validateDates = () => {
    if (!startDate || !endDate) return;

    const start = dayjs(startDate);
    const end = dayjs(endDate);

    if (end.isBefore(start)) {
      setDateError('结束日期不能早于开始日期');
      return;
    }

    if (end.isSame(start)) {
      setDateError('结束日期不能与开始日期相同');
      return;
    }

    setDateError(undefined);
  };

  const handleStartDateChange = (date: string) => {
    setStartDate(date);
    setDateError(undefined);
    if (endDate && dayjs(date).isAfter(dayjs(endDate))) {
      setEndDate('');
    }
  };

  const handleEndDateChange = (date: string) => {
    setEndDate(date);
    validateDates();
  };

  const handleSubmit = () => {
    validateDates();
    if (dateError) return;

    const budget: TripBudget = {
      total: parseInt(budgetTotal) || 5000,
      transport: Math.round((parseInt(budgetTotal) || 5000) * 0.3),
      accommodation: Math.round((parseInt(budgetTotal) || 5000) * 0.35),
      food: Math.round((parseInt(budgetTotal) || 5000) * 0.2),
      activities: Math.round((parseInt(budgetTotal) || 5000) * 0.15),
    };

    const data = {
      destinations: destinations.split('、').map(d => d.trim()).filter(d => d),
      startDate,
      endDate,
      travelers: parseInt(travelers) || 2,
      budget,
      preferences: {
        foodTypes: selectedFoodTypes,
        attractionTypes: selectedAttractionTypes,
      },
      userId: user?.id,
    };

    onSubmit(data);
  };

  const isFormValid = destinations.length > 0 && startDate && endDate && !dateError;

  return (
    <ScrollView style={styles.container} showsVerticalScrollIndicator={false}>
      <View style={styles.card}>
        <View style={styles.sectionHeader}>
          <Icon name="information" size={22} color={theme.colors.primary} />
          <Text style={styles.sectionTitle}>基本信息</Text>
        </View>

        <View style={styles.inputGroup}>
          <Text style={styles.label}>目的地</Text>
          <TextInput
            mode="outlined"
            value={destinations}
            onChangeText={setDestinations}
            placeholder="例如: 北京、上海、杭州"
            style={styles.input}
            outlineStyle={styles.outlineStyle}
          />
          <Text style={styles.helper}>多个目的地请用顿号分隔</Text>
        </View>

        <View style={styles.inputGroup}>
          <Text style={styles.label}>行程日期</Text>
          <DateRangePicker
            startDate={startDate}
            endDate={endDate}
            onStartDateChange={handleStartDateChange}
            onEndDateChange={handleEndDateChange}
            error={dateError}
          />
        </View>

        <View style={styles.inputGroup}>
          <Text style={styles.label}>出行人数</Text>
          <TextInput
            mode="outlined"
            value={travelers}
            onChangeText={setTravelers}
            keyboardType="numeric"
            style={styles.input}
            outlineStyle={styles.outlineStyle}
            left={<TextInput.Icon icon="account-group" size={20} />}
          />
        </View>
      </View>

      <View style={styles.card}>
        <View style={styles.sectionHeader}>
          <Icon name="wallet" size={22} color={theme.colors.primary} />
          <Text style={styles.sectionTitle}>预算设置</Text>
        </View>

        <View style={styles.inputGroup}>
          <Text style={styles.label}>总预算</Text>
          <TextInput
            mode="outlined"
            value={budgetTotal}
            onChangeText={setBudgetTotal}
            keyboardType="numeric"
            left={<TextInput.Affix text="¥" textStyle={styles.affixText} />}
            style={styles.input}
            outlineStyle={styles.outlineStyle}
          />
        </View>

        <View style={styles.budgetBreakdown}>
          <View style={styles.budgetItem}>
            <Text style={styles.budgetLabel}>交通</Text>
            <Text style={styles.budgetValue}>¥{Math.round((parseInt(budgetTotal) || 5000) * 0.3).toLocaleString()}</Text>
          </View>
          <View style={styles.budgetItem}>
            <Text style={styles.budgetLabel}>住宿</Text>
            <Text style={styles.budgetValue}>¥{Math.round((parseInt(budgetTotal) || 5000) * 0.35).toLocaleString()}</Text>
          </View>
          <View style={styles.budgetItem}>
            <Text style={styles.budgetLabel}>美食</Text>
            <Text style={styles.budgetValue}>¥{Math.round((parseInt(budgetTotal) || 5000) * 0.2).toLocaleString()}</Text>
          </View>
          <View style={styles.budgetItem}>
            <Text style={styles.budgetLabel}>活动</Text>
            <Text style={styles.budgetValue}>¥{Math.round((parseInt(budgetTotal) || 5000) * 0.15).toLocaleString()}</Text>
          </View>
        </View>
      </View>

      <View style={styles.card}>
        <View style={styles.sectionHeader}>
          <Icon name="heart" size={22} color={theme.colors.primary} />
          <Text style={styles.sectionTitle}>偏好设置</Text>
        </View>

        <View style={styles.inputGroup}>
          <Text style={styles.label}>美食偏好</Text>
          <Text style={styles.selectedCount}>已选择 {selectedFoodTypes.length} 项</Text>
          <View style={styles.chipGroup}>
            {FOOD_TYPES.map(type => (
              <Chip
                key={type}
                mode={selectedFoodTypes.includes(type) ? 'flat' : 'outlined'}
                selected={selectedFoodTypes.includes(type)}
                onPress={() => handleFoodTypeToggle(type)}
                style={[styles.chip, selectedFoodTypes.includes(type) && styles.chipSelected]}
                textStyle={styles.chipText}
              >
                {type}
              </Chip>
            ))}
          </View>
        </View>

        <View style={[styles.inputGroup, { marginBottom: 0 }]}>
          <Text style={styles.label}>景点类型</Text>
          <View style={styles.chipGroup}>
            {ATTRACTION_TYPES.map(type => (
              <Chip
                key={type}
                mode={selectedAttractionTypes.includes(type) ? 'flat' : 'outlined'}
                selected={selectedAttractionTypes.includes(type)}
                onPress={() => {
                  setSelectedAttractionTypes(prev =>
                    prev.includes(type)
                      ? prev.filter(t => t !== type)
                      : [...prev, type]
                  );
                }}
                style={[styles.chip, selectedAttractionTypes.includes(type) && styles.chipSelected]}
                textStyle={styles.chipText}
              >
                {type}
              </Chip>
            ))}
          </View>
        </View>
      </View>

      <View style={styles.buttonGroup}>
        <Button
          mode="contained"
          onPress={handleSubmit}
          disabled={!isFormValid}
          style={[styles.button, styles.primaryButton]}
          contentStyle={styles.buttonContent}
          labelStyle={styles.buttonLabel}
          icon="rocket-launch"
        >
          生成行程
        </Button>

        <Button
          mode="outlined"
          onPress={onAIContinue}
          style={[styles.button, styles.aiButton]}
          contentStyle={styles.buttonContent}
          labelStyle={styles.aiButtonLabel}
          icon="auto-fix"
        >
          AI智能规划
        </Button>
      </View>
    </ScrollView>
  );
}

